<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMinor"
        android:gravity="center"
        android:layout_marginBottom="@dimen/material_8dp"
        android:layout_above="@+id/url_textView"
        android:text="@string/copyright_statement" />
    <TextView
        android:id="@+id/url_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMinor"
        android:gravity="center"
        android:layout_marginBottom="@dimen/material_48dp"
        android:textSize="@dimen/material_18sp"
        android:text="@string/url"/>

