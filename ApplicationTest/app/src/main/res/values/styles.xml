<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="base_SwipeBackLayout">
        <item name="base_edge_size">@dimen/material_50dp</item>
        <item name="base_shadow_left">@drawable/base_shadow_left</item>
        <item name="base_shadow_right">@drawable/base_shadow_right</item>
        <item name="base_shadow_bottom">@drawable/base_shadow_bottom</item>
    </style>

    <style name="base_KJAppTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titlebar">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="titlebar_text" parent="titlebar">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 菜单layout的样式 -->
    <style name="MenuItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/material_15dp</item>
        <item name="android:paddingRight">@dimen/material_15dp</item>
        <item name="android:background">@drawable/selector_text_bg</item>
    </style>

    <!-- 菜单ImageView的样式 -->
    <style name="MenuItemImageViewStyle">
        <item name="android:layout_width">@dimen/material_24dp</item>
        <item name="android:layout_height">@dimen/material_24dp</item>
        <item name="android:layout_marginRight">@dimen/material_15dp</item>
    </style>

    <!-- 菜单TextView的样式 -->
    <style name="MenuItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/drawer_menu_text</item>
        <item name="android:drawablePadding">@dimen/material_10dp</item>
        <item name="android:textSize">@dimen/material_16sp</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/material_3dp</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">normal</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorPressed</item>
        <item name="fab_colorRipple">@color/colorRipple</item>
    </style>

    <style name="NewsItemTextStyle">
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">@dimen/material_12sp</item>
    </style>

    <style name="WeatherInfoTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/material_8dp</item>
        <item name="android:layout_marginLeft">@dimen/material_12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/material_20sp</item>
    </style>

</resources>
